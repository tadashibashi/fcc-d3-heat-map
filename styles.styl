html, body
    margin: 0
    padding: 0
    font-family: sans-serif

h1, h2
    text-align: center
    font-weight: normal

#app
    width: 100%
    height: 100%

.graph
    display: block
    margin: 0 auto

.cell:hover
    stroke-width: 2px
    stroke: rgba(0, 0, 0, 0.895);

.tooltip
    position: absolute
    background: rgba(0, 0, 0, 0.639)
    color: rgb(244, 244, 244)
    padding: .4rem 1rem
    border-radius: 4px
    visibility: hidden
    p
        padding: 0
        margin: 0 .4rem
        text-align: center